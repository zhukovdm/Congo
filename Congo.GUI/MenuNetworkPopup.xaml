<Window x:Class="Congo.GUI.MenuNetworkPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Congo.GUI"
        mc:Ignorable="d"
        Title="Network Connection" MinHeight="250" Height="250" MinWidth="450" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Height="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Width="100" FontSize="40">User:</TextBlock>
                <DockPanel Width="10"/>
                <TextBox Name="textBoxUserName" Width="300" FontSize="40"/>
            </StackPanel>
            <StackPanel Height="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Width="50" FontSize="40">IP:</TextBlock>
                <DockPanel Width="10"/>
                <TextBox Width="80" FontSize="40" TextAlignment="Center">127</TextBox>
                <TextBlock Width="10" FontSize="40" TextAlignment="Center">.</TextBlock>
                <TextBox Width="80" FontSize="40" TextAlignment="Center">0</TextBox>
                <TextBlock Width="10" FontSize="40" TextAlignment="Center">.</TextBlock>
                <TextBox Width="80" FontSize="40" TextAlignment="Center">0</TextBox>
                <TextBlock Width="10" FontSize="40" TextAlignment="Center">.</TextBlock>
                <TextBox Width="80" FontSize="40" TextAlignment="Center">1</TextBox>
            </StackPanel>
            <StackPanel Height="10"/>
            <DockPanel HorizontalAlignment="Center">
                <TextBlock Width="90" FontSize="40">Port:</TextBlock>
                <DockPanel Width="10"/>
                <TextBox Width="100" FontSize="40" TextAlignment="Center">8080</TextBox>
                <DockPanel Width="30"/>
                <Button FontSize="40" Width="180">Confirm</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
